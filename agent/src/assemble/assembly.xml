<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>agent</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.basedir}/teamcity-plugin.xml</source>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <scope>runtime</scope>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>org.whitesource.teamcity:*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <scope>runtime</scope>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>org.whitesource.teamcity:*</include>
            </includes>
            <outputFileNameMapping>teamcity-whitesource-plugin-${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
    </dependencySets>
</assembly>