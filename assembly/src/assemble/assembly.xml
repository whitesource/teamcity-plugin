<assembly>
    <id>package</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.basedir}/../teamcity-plugin.xml</source>
            <filtered>true</filtered>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../agent/target</directory>
            <outputDirectory>agent</outputDirectory>
            <includes>
                <include>*agent*.zip</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>server</outputDirectory>
            <excludes>
                <exclude>*agent*</exclude>
                <exclude>*junit*</exclude>
                <exclude>*hamcrest*</exclude>
                <exclude>*whitesource*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>server</outputDirectory>
            <excludes>
                <exclude>*agent*</exclude>
            </excludes>
            <includes>
                <include>org.whitesource.teamcity:*</include>
            </includes>
            <outputFileNameMapping>teamcity-whitesource-plugin-${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
    </dependencySets>
</assembly>