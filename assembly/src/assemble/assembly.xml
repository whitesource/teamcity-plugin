<assembly>
    <id>package</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${project.basedir}/../teamcity-plugin.xml</source>
            <filtered>true</filtered>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../agent/target</directory>
            <outputDirectory>agent</outputDirectory>
            <includes>
                <include>*agent*.zip</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../server/target/server-dist</directory>
            <outputDirectory>server</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>